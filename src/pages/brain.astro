---
import Base from '../layouts/Base.astro';
import NeuralLattice from '../components/NeuralLattice.astro';

const title = "The Neural Lattice";
const description = "Visualizing the connections between AI governance research objects. A living, reflexive map of the initiative.";
---

<Base title={title} description={description}>
  <main class="brain-view">
    <NeuralLattice />
  </main>
</Base>

<style>
  .brain-view {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 0;
    overflow: hidden;
  }
  
  /* Override header transparency for this page if needed */
  :global(.header) {
    background: rgba(5, 5, 16, 0.8) !important;
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
</style>
