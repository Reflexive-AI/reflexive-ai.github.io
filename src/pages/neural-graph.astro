---
import Base from '../layouts/Base.astro';
import NeuralGraph from '../components/NeuralGraph.astro';

const title = "The Neural Graph";
const description = "Visualizing the connections between AI governance research objects. A living, reflexive map of the initiative.";
---

<Base title={title} description={description}>
  <main class="brain-view">
    <NeuralGraph />
  </main>
</Base>

<style>
  .brain-view {
    position: fixed;
    top: var(--header-height, 64px);
    left: 0;
    width: 100vw;
    height: calc(100vh - var(--header-height, 64px));
    z-index: 10;
    overflow: hidden;
    padding: 0;
    background: #ffffff;
  }
  
  :global(.header) {
    position: relative;
    z-index: 100;
    background: rgba(255, 255, 255, 0.95) !important;
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }
  
  /* Hide footer on this page */
  :global(.footer) {
    display: none !important;
  }
</style>

