---
import Base from '@/layouts/Base.astro';
import ArticleCard from '@/components/ArticleCard.astro';
import { getCollection } from 'astro:content';

const allArticles = (await getCollection('research')).filter(a => a.slug.startsWith('es/'));
const sortedArticles = allArticles
  .filter(a => !a.data.draft)
  .sort((a, b) => {
    // Sort by article number extracted from slug (e.g., "es/051-foo")
    const numA = parseInt(a.slug.replace('es/', '').split('-')[0], 10) || 0;
    const numB = parseInt(b.slug.replace('es/', '').split('-')[0], 10) || 0;
    return numB - numA; // Descending: newest first
  });
---

<Base title="Investigación" description="Todos los artículos de investigación de la Iniciativa Reflexive AI">
  <div class="container" style="padding: var(--space-12) var(--space-6);">
    <header style="margin-bottom: var(--space-10);">
      <h1>Investigación</h1>
      <p class="text-secondary" style="font-size: 1.2rem; max-width: 60ch;">
        {sortedArticles.length} artículos de investigación sobre gobernanza de la IA, seguridad y el papel
        de los sistemas de IA en su propia regulación.
      </p>
    </header>
    
    <div class="article-grid">
      {sortedArticles.map((article) => {
        const num = parseInt(article.slug.replace('es/', '').split('-')[0], 10);
        return (
          <ArticleCard
            number={num}
            title={article.data.title}
            excerpt={article.data.excerpt}
            slug={article.slug}
            tags={article.data.tags}
          />
        );
      })}
    </div>
  </div>
</Base>
