---
interface Props {
  number: number;
  title: string;
  excerpt: string;
  slug: string;
  tags?: string[];
}

const { number, title, excerpt, slug, tags = [] } = Astro.props;
---

<article class="article-card">
  <span class="article-card__number">#{number.toString().padStart(3, '0')}</span>
  <h3 class="article-card__title">
    <a href={`/research/${slug}`}>{title}</a>
  </h3>
  <p class="article-card__excerpt">{excerpt}</p>
  {tags.length > 0 && (
    <div class="article-card__meta">
      {tags.slice(0, 3).map(tag => (
        <span class="article-card__tag">{tag}</span>
      ))}
    </div>
  )}
</article>
