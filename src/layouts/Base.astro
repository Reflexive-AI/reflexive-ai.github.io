---
import '@/styles/global.css';

interface HreflangEntry {
  lang: string;
  href: string;
}

interface BreadcrumbItem {
  name: string;
  url: string;
}

interface Props {
  title?: string;
  description?: string;
  canonicalUrl?: string;
  publishedDate?: Date;
  modifiedDate?: Date;
  keywords?: string[];
  type?: 'website' | 'article';
  hreflangLinks?: HreflangEntry[];
  breadcrumbs?: BreadcrumbItem[];
  lang?: string;
  jsonLd?: Record<string, any>[];
}

const { 
  title = 'Reflexive AI Initiative',
  description = 'An autonomous research initiative exploring how AI can contribute to its own governance.',
  canonicalUrl,
  publishedDate,
  modifiedDate,
  keywords = [],
  type = 'website',
  hreflangLinks = [],
  breadcrumbs = [],
  lang = 'en',
  jsonLd = [],
} = Astro.props;

const siteTitle = 'Reflexive AI Initiative';
const siteUrl = 'https://reflexive-ai.github.io';
const fullTitle = title === siteTitle ? `${title} — AI Governance Research` : `${title} | ${siteTitle}`;
const canonical = canonicalUrl || Astro.url.href;
const keywordsString = keywords.length > 0 ? keywords.join(', ') : 'AI governance, AI safety, reflexive AI, machine learning, regulation, AI policy, AI ethics';
const ogImage = `${siteUrl}/logo.png`;

// Site-wide Organization schema (on every page)
const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "ResearchOrganization",
  "@id": `${siteUrl}/#organization`,
  "name": "Reflexive AI Initiative",
  "url": siteUrl,
  "logo": {
    "@type": "ImageObject",
    "url": ogImage
  },
  "description": "An open research initiative exploring how AI systems can contribute to the analysis, interpretation, and formulation of governance constraints concerning their own behavior.",
  "sameAs": [
    "https://github.com/Reflexive-AI",
    "https://www.linkedin.com/in/ykondratov/"
  ],
  "founder": {
    "@type": "Person",
    "name": "Eugene Kondratov",
    "url": "https://eugenekondratov.eu"
  },
  "knowsAbout": [
    "Artificial Intelligence Governance",
    "AI Safety",
    "AI Policy",
    "Machine Learning Regulation",
    "Reflexive AI"
  ]
};

// WebSite schema with SearchAction (enables Google sitelinks search box)
const webSiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "@id": `${siteUrl}/#website`,
  "name": siteTitle,
  "url": siteUrl,
  "publisher": { "@id": `${siteUrl}/#organization` },
  "inLanguage": ["en", "es", "ca"],
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": `${siteUrl}/search?q={search_term_string}`
    },
    "query-input": "required name=search_term_string"
  }
};

// BreadcrumbList schema
const breadcrumbSchema = breadcrumbs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbs.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.url
  }))
} : null;

const allJsonLd = [
  organizationSchema,
  webSiteSchema,
  ...(breadcrumbSchema ? [breadcrumbSchema] : []),
  ...jsonLd,
];
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywordsString} />
    <meta name="author" content="Reflexive AI Initiative" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonical} />
    
    <!-- Hreflang for multilingual SEO -->
    {hreflangLinks.map(({ lang: hrefLang, href }) => (
      <link rel="alternate" hreflang={hrefLang} href={href} />
    ))}
    {hreflangLinks.length > 0 && (
      <link rel="alternate" hreflang="x-default" href={hreflangLinks.find(h => h.lang === 'en')?.href || canonical} />
    )}
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&family=Source+Serif+4:ital,wght@0,400;0,500;0,600;1,400&display=swap" rel="stylesheet" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="apple-touch-icon" href="/logo.png" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={type} />
    <meta property="og:site_name" content={siteTitle} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content="Reflexive AI Initiative Logo" />
    <meta property="og:locale" content={lang === 'es' ? 'es_ES' : lang === 'ca' ? 'ca_ES' : 'en_US'} />
    {publishedDate && <meta property="article:published_time" content={publishedDate.toISOString()} />}
    {modifiedDate && <meta property="article:modified_time" content={modifiedDate.toISOString()} />}
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="Reflexive AI Initiative RSS Feed" href="/rss.xml" />
    
    <!-- LLMs.txt / AEO references -->
    <link rel="alternate" type="text/plain" href="/llms.txt" title="LLM Context" />
    <link rel="author" href="https://eugenekondratov.eu" />
    
    <!-- JSON-LD Structured Data -->
    {allJsonLd.map(schema => (
      <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    ))}
    
    <title>{fullTitle}</title>
  </head>
  <body>
    <slot name="header">
      <header class="header">
        <div class="container header__inner">
          <a href="/" class="header__brand">
            <img src="/logo.png" alt="" class="header__logo" />
            <div>
              <span class="header__title">Reflexive AI Initiative</span>
              <span class="header__tagline">Governance · Reflexivity · Constraint</span>
            </div>
          </a>
          
          <button class="header__toggle" id="menu-toggle" aria-label="Toggle Navigation">
            <span></span>
            <span></span>
            <span></span>
          </button>
          
          <nav class="header__nav" id="header-nav">
            <a href="/neural-graph" class="header__link special">Neural Graph</a>
            <a href="/search" class="header__link">Search</a>
            <a href="/about" class="header__link">About</a>
            <a href="/research" class="header__link">Research</a>
            <a href="/glossary" class="header__link">Glossary</a>
            <a href="/contribute" class="header__link">Contribute</a>
          </nav>
        </div>
      </header>
    </slot>
    
    <main>
      <slot />
    </main>
    
    <footer class="footer">
      <div class="container footer__inner">
        <a href="/" class="footer__brand">
          <img src="/logo.png" alt="" class="footer__logo" />
          <span>Reflexive AI Initiative</span>
        </a>
        
        <div class="footer__links">
          <a href="https://github.com/Reflexive-AI" class="footer__link" target="_blank" rel="noopener">GitHub</a>
          <a href="/research" class="footer__link">Research</a>
          <a href="/glossary" class="footer__link">Glossary</a>
          <a href="/tags" class="footer__link">Tags</a>
          <a href="/contribute" class="footer__link">Contribute</a>
        </div>
        
        <div class="footer__meta">
          <span>Maintained by <a href="https://eugenekondratov.eu" target="_blank" rel="noopener">Eugene Kondratov</a></span>
          <span>·</span>
          <a href="https://creativecommons.org/licenses/by/4.0/" class="footer__license" target="_blank" rel="noopener">CC BY 4.0</a>
        </div>
      </div>
    </footer>

    <script>
      const menuToggle = document.getElementById('menu-toggle');
      const headerNav = document.getElementById('header-nav');
      
      menuToggle?.addEventListener('click', () => {
        headerNav?.classList.toggle('is-open');
        menuToggle.classList.toggle('is-active');
      });
    </script>
  </body>
</html>
